{
  "version": 2,
  "builds": [{
    "src": "client/package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "dist",
      "installCommand": "cd client && npm ci --force",
      "buildCommand": "cd client && npm run build"
    }
  }],
  "routes": [{
    "src": "/(.*)", 
    "dest": "client/index.html"
  }]
}