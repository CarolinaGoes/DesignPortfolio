{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./client/shared/*"]
    },
    "types": ["vite/client"],
    "outDir": "./dist",
    "rootDir": "./client"
  },
  "include": [
    "client/src/**/*",
    "client/shared/**/*",
    "client/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}