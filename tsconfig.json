{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler", // ðŸ‘ˆ isso evita os erros de extensÃ£o
    "target": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./client/shared/*"]
    },
    "types": ["vite/client"],
    "outDir": "./dist",
    "rootDir": "./client"
  },
  "include": [
    "client/src/**/*",
    "client/shared/**/*",
    "client/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
